{
  "name": "gutenku",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "lint": "pnpm -r run lint",
    "lint:css": "pnpm --filter @gutenku/front lint:css",
    "typecheck": "pnpm -r --if-present --filter '!./private/**' run typecheck",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "test": "pnpm -r --if-present --filter '!./private/**' run test",
    "start": "pnpm --filter @gutenku/server dev",
    "dev": "pnpm --filter @gutenku/shared build && pnpm -r --if-present --filter '!./private/**' --parallel run dev",
    "setup": "pnpm --filter @gutenku/server run setup:books",
    "setup:reset": "pnpm --filter @gutenku/server run setup:books:reset",
    "extract": "pnpm --filter @gutenku/server extract",
    "mc:train": "pnpm --filter @gutenku/server mc:train",
    "ml:train": "pnpm --filter @gutenku/server ml:train",
    "post": "pnpm --filter @gutenku/server post",
    "build": "pnpm --filter @gutenguess/shared build && pnpm -r --if-present --filter '!./private/**' run build",
    "prepare": "husky",
    "submodule:update": "./scripts/update-submodule.sh",
    "setup:covers": "./scripts/setup-covers.sh",
    "depcruise": "depcruise packages --config"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.3.1",
    "dependency-cruiser": "^17.3.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "tsdown": "0.20.0-beta.4"
  },
  "packageManager": "pnpm@10.28.0"
}
