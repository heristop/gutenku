# Server configuration
SERVER_PORT=4000
NODE_ENV=development
CORS_WHITELIST="http://localhost:4444,https://studio.apollographql.com"

# MongoDB configuration
MONGODB_URI=mongodb://root:root@localhost:27017
MONGODB_DB=admin
MIN_CACHED_DOCS=25

# Docker MongoDB credentials (used by docker-compose.yaml)
MONGO_USER=root
MONGO_PASSWORD=root

# OpenAI API
OPENAI_API_KEY=
OPENAI_SELECTION_COUNT=7
OPENAI_DESCRIPTION_TEMPERATURE=0.3
OPENAI_IMAGE_MODEL=gpt-image-1.5
OPENAI_IMAGE_QUALITY=high

# Discord API
DISCORD_WEBHOOK_URL=
DISCORD_HASHTAGS="#gutenku #gutenguess"

# Resend Email API (for email subscriptions)
# Get your API key at https://resend.com
RESEND_API_KEY=re_xxxxxxxxxx
# For testing without verified domain, use: onboarding@resend.dev
# For production with verified domain: "GutenGuess <noreply@yourdomain.com>"
EMAIL_FROM=onboarding@resend.dev
APP_URL=http://localhost:4444
