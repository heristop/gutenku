# Server configuration
SERVER_PORT=4000
CORS_WHITELIST="http://localhost:4444,https://studio.apollographql.com"

# MongoDB configuration
MONGODB_URI=mongodb://root:root@localhost:27017
MONGODB_DB=admin
MIN_CACHED_DOCS=25

# Haiku Rules
MIN_QUOTES_COUNT=12
VERSE_MAX_LENGTH=30
SENTIMENT_MIN_SCORE=0.1 # [-1;+1] normalized by sentence length
MARKOV_MIN_SCORE=0.1
POS_MIN_SCORE=0.0 # [0;1] grammatical completeness (0=disabled)
TRIGRAM_MIN_SCORE=0.0 # [0;1] phrase flow (0=disabled)
TFIDF_MIN_SCORE=0.0 # [0;1] word distinctiveness (0=disabled)
PHONETICS_MIN_SCORE=0.0 # [0;1] alliteration score (0=disabled)

# OpenAI API
OPENAI_API_KEY=
OPENAI_SELECTION_COUNT=7
OPENAI_DESCRIPTION_TEMPERATURE=0.3
# GPT model for haiku selection/enrichment (default: gpt-5.2)
# Options: gpt-5.2, gpt-5.1, gpt-5-mini, gpt-5-nano, gpt-4o, gpt-4o-mini
OPENAI_GPT_MODEL=gpt-5.2
# Reasoning effort for GPT-5 models (default: low)
# Options: none, low, medium, high
OPENAI_REASONING_EFFORT=low

# Discord API
DISCORD_WEBHOOK_URL=
DISCORD_HASHTAGS="#gutenku"
